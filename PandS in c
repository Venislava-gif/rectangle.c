#include<stdio.h>
#include<conio.h>

int main()
{
    
    float a, b, S, P;

  
    printf("Enter length of the rectangle = ");
    scanf("%f", &a);
    printf("Enter breadth of the rectangle = ");
    scanf("%f", &b);

    
    S = a * b;
    P = 2 * (a * b);

    
    printf("Area of rectangle = %f", S);
    printf("\nPerimeter of rectangle = %f", P);

    return 0;
}
